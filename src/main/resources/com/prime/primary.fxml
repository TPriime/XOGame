<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.999-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.prime.PrimaryController">
   <children>
      <Label text="New Game" />
      <HBox alignment="CENTER">
         <children>
            <Label text="Mode: " />
            <Spinner fx:id="spinner" />
         </children>
      </HBox>
      <Button fx:id="primaryButton" onAction="#switchToSecondary" text="Start" />
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
